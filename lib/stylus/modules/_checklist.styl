.move-item-btn {
  background: #eee;
  border-radius: 3px;
  color: #000;
  padding: 0.5em;
  margin-right: 1em;
  font-size: 150%;
  text-decoration: none;
  display: inline-block;
  vertical-align: middle;
  width: 3em;
  text-align: center;
  position: relative;
  top: 0.5em;
}
.remove-item-btn {
  top: -1.2em;
}